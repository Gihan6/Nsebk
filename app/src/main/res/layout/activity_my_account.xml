<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MyAccount"
    android:fillViewport="true"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:text="@string/navaccount"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:gravity="center"
            />
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="start|center_vertical"
            android:src="@drawable/ic_left_white"
            android:id="@+id/back_my_account"
            />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="1dp"
        android:background="@color/colorPrimary"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/logo2"
            android:layout_gravity="center"
            />
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            >
            <Button
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/corner_background1"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="@string/navaccount"
                android:id="@+id/my_account_button_1"
                android:layout_marginBottom="16dp"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/corner_background1"
                android:textSize="15sp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="@string/my_address"
                android:id="@+id/my_account_button_2"
                android:layout_marginBottom="16dp"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/corner_background1"
                android:textSize="15sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="@string/charge_date"
                android:id="@+id/my_account_button_3"
                android:layout_marginBottom="16dp"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/corner_background1"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:textStyle="bold"
                android:text="@string/mydeals"
                android:id="@+id/my_account_button_4"
                android:layout_marginBottom="16dp"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/corner_background1"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:text="@string/navinterests"
                android:gravity="center"
                android:textStyle="bold"
                android:id="@+id/my_account_button_5"
                />
        </LinearLayout>
    </FrameLayout>
    </LinearLayout>
</ScrollView>
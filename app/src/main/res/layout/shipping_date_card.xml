<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/corner_background3"
    android:layoutDirection="rtl"
    android:layout_marginBottom="16dp"
    >

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text=""
    android:id="@+id/date"
    android:textColor="@color/colorAccent"
    android:textSize="18sp"
    android:layout_margin="4dp"
    />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:layout_marginBottom="16dp"
        android:paddingRight="16dp"
        android:gravity="center"
        android:background="@drawable/corner_background4"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/package_name"
            android:layout_weight="1"
            android:gravity="center"
            />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_arrow_left_accent"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/package_points"
            android:gravity="center"
            android:layout_weight="1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:visibility="gone"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:gravity="center"
        android:background="@drawable/corner_background4"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="باقة 20"
            android:layout_weight="1"
            android:gravity="center"
            />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_arrow_left_accent"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="60 نقطة"
            android:gravity="center"
            android:layout_weight="1"
            />
    </LinearLayout>

</LinearLayout>
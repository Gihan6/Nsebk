<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main_deals_card_price"/>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"></FrameLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main_deals_card_points"
            android:textColor="@color/colorPrimary"/>
    </LinearLayout>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="1dp"
    android:background="@drawable/border_background1"
    >
  <ImageView
      android:layout_width="match_parent"
      android:layout_height="100dp"
      android:id="@+id/main_deals_card_img"
      android:scaleType="centerCrop"
      android:src="@drawable/mc11"
      />
</FrameLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_deals_card_title"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:gravity="center"
        />
  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/main_deals_card_date"
      android:textColor="@color/white"
      android:background="@color/colorPrimary"
      android:textSize="18sp"
      android:gravity="center"
      />
</LinearLayout>